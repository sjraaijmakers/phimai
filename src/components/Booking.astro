---
import { useTranslations } from '../i18n/ui';
import { ArrowRight } from 'lucide-astro';

// For now, we'll use English as default
const t = useTranslations('en');
---

<section id="booking" class="booking">
  <div class="container">
    <div class="booking-content">
      <div class="booking-header">
        <h2 data-i18n="booking.title" />
        <p data-i18n="booking.subtitle" />
      </div>

      <div class="booking-options">
        <a href="#" class="booking-option airbnb" target="_blank" rel="noopener">
          <div class="booking-logo">
            <span class="logo-text">A</span>
          </div>
          <div class="booking-content">
            <h3 data-i18n="booking.airbnb" />
            <p data-i18n="booking.airbnbDescription" />
          </div>
          <div class="booking-arrow">
            <ArrowRight size={20} />
          </div>
        </a>

        <a href="#" class="booking-option booking" target="_blank" rel="noopener">
          <div class="booking-logo">
            <span class="logo-text">B</span>
          </div>
          <div class="booking-content">
            <h3 data-i18n="booking.booking" />
            <p data-i18n="booking.bookingDescription" />
          </div>
          <div class="booking-arrow">
            <ArrowRight size={20} />
          </div>
        </a>
      </div>
    </div>
  </div>
</section>


