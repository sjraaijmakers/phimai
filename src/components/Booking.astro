---
import { useTranslations } from '../i18n/ui';

// For now, we'll use English as default
const t = useTranslations('en');
---

<section id="booking" class="booking">
  <div class="container">
    <div class="booking-header">
      <h2>{t('booking.title')}</h2>
      <p>{t('booking.subtitle')}</p>
    </div>
    
    <div class="booking-options">
      <a href="#" class="booking-option airbnb" target="_blank" rel="noopener">
        <div class="booking-logo">
          <span class="logo-text">A</span>
        </div>
        <div class="booking-content">
          <h3>{t('booking.airbnb')}</h3>
          <p>{t('booking.airbnb.description')}</p>
        </div>
        <div class="booking-arrow">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </div>
      </a>
      
      <a href="#" class="booking-option booking" target="_blank" rel="noopener">
        <div class="booking-logo">
          <span class="logo-text">B</span>
        </div>
        <div class="booking-content">
          <h3>{t('booking.booking')}</h3>
          <p>{t('booking.booking.description')}</p>
        </div>
        <div class="booking-arrow">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </div>
      </a>
    </div>
  </div>
</section>

<style>
  .booking {
    padding: 5rem 2rem;
    background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  }

  .booking-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .booking-header h2 {
    font-family: 'Crimson Text', serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: #3A3A3A;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .booking-header p {
    font-size: 1.15rem;
    color: #6B6B6B;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
  }

  .booking-options {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .booking-option {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 2px solid transparent;
  }

  .booking-option::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.1;
    transition: opacity 0.3s ease;
  }

  .booking-option:hover::before {
    opacity: 0.15;
  }

  .booking-option.airbnb {
    background: linear-gradient(135deg, #FF5A5F 0%, #FF385C 100%);
    color: white;
  }

  .booking-option.airbnb::before {
    background: linear-gradient(135deg, #FF5A5F 0%, #FF385C 100%);
  }

  .booking-option.airbnb:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(255, 90, 95, 0.3);
    border-color: #FF5A5F;
  }

  .booking-option.booking {
    background: linear-gradient(135deg, #003580 0%, #0046A4 100%);
    color: white;
  }

  .booking-option.booking::before {
    background: linear-gradient(135deg, #003580 0%, #0046A4 100%);
  }

  .booking-option.booking:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 53, 128, 0.3);
    border-color: #003580;
  }

  .booking-logo {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
  }

  .logo-text {
    font-family: 'Inter', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .booking-content {
    flex: 1;
  }

  .booking-content h3 {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: white;
  }

  .booking-content p {
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 400;
    margin: 0;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
  }

  .booking-arrow {
    flex-shrink: 0;
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .booking-option:hover .booking-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .booking {
      padding: 3rem 1rem;
    }

    .booking-header h2 {
      font-size: 2rem;
    }

    .booking-options {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .booking-option {
      padding: 1.5rem;
      gap: 1rem;
    }

    .booking-logo {
      width: 50px;
      height: 50px;
    }

    .booking-content h3 {
      font-size: 1.1rem;
    }

    .booking-content p {
      font-size: 0.85rem;
    }
  }
</style>
