---
import { useTranslations } from '../i18n/ui';
import { ArrowRight } from 'lucide-astro';

// For now, we'll use English as default
const t = useTranslations('en');
---

<section id="booking" class="booking section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title" data-i18n="booking.title" />
      <p class="section-subtitle" data-i18n="booking.subtitle" />
    </div>

    <div class="booking-options">
              <a href="https://www.agoda.com/phimai-pond-house/hotel/nakhonratchasima-th.html" class="booking-option btn agoda" target="_blank" rel="noopener">
          <div class="booking-logo">
            <img src="/images/logos/agoda-logo.jpeg" alt="Agoda" class="logo-image" />
          </div>
                  <div class="booking-content">
            <span data-i18n="booking.agoda" />
          </div>
        <div class="booking-arrow">
          <ArrowRight size={20} />
        </div>
      </a>

              <a href="https://www.booking.com/hotel/th/phimai-pond-house" class="booking-option btn booking" target="_blank" rel="noopener">
          <div class="booking-logo">
            <img src="/images/logos/booking-logo.jpeg" alt="Booking.com" class="logo-image" />
          </div>
                  <div class="booking-content">
            <span data-i18n="booking.booking" />
          </div>
        <div class="booking-arrow">
          <ArrowRight size={20} />
        </div>
      </a>
    </div>
  </div>
</section>


