---
import {
  WashingMachine,
  Utensils,
  Coffee,
  Package,
  Bike,
  Users,
  Car,
} from 'lucide-astro';
import { t } from 'i18next';

// Amenities structure for DRY approach
const amenities = [
  {
    icon: WashingMachine,
    key: 'about.amenities.washingMachine',
  },
  {
    icon: Utensils,
    key: 'about.amenities.kitchenette',
  },
  {
    icon: Coffee,
    key: 'about.amenities.snacks',
  },
  {
    icon: Package,
    key: 'about.amenities.essentials',
  },
  {
    icon: Car,
    key: 'about.amenities.transfer',
  },
  {
    icon: Bike,
    key: 'about.amenities.bikes',
  },
];
---

<!-- About Info -->
<div class="about-info">
  <h2>{t('about.title')}</h2>
  <p>{t('about.intro')}</p>

  <!-- Family suite info integrated into main description -->
  <div class="family-suite-info">
    <div class="family-suite-icon">
      <Users size={20} />
    </div>
    <div class="family-suite-content">
      <h4>{t('about.familySuite.title')}</h4>
      <p>{t('about.familySuite.description')}</p>
    </div>
  </div>
</div>

<!-- Amenities -->
<div class="amenities">
  <h3>{t('about.amenities.title')}</h3>
  <div class="amenities-list">
    {
      amenities.map(({ icon: Icon, key }) => (
        <div class="amenity-item">
          <div class="amenity-icon">
            <Icon size={20} />
          </div>
          <span>{t(key)}</span>
        </div>
      ))
    }
  </div>
</div>

<style>
  /* ===== ABOUT CONTENT STYLES ===== */
  .about-info p {
    margin-bottom: var(--space-xl);
  }

  /* Family suite info integrated into main description */
  .family-suite-info {
    display: flex;
    align-items: flex-start;
    gap: var(--space);
    padding: var(--space-lg);
    background: rgba(139, 115, 85, 0.05);
    border-radius: var(--radius);
    margin-top: var(--space-xl);
  }

  .family-suite-icon {
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    flex-shrink: 0;
  }

  .family-suite-content h4 {
    margin: 0 0 var(--space-sm) 0;
    color: var(--color-primary);
  }

  .family-suite-content p {
    margin: 0;
    color: var(--color-text);
  }

  .amenities h3 {
    margin-bottom: var(--space-xl);
  }

  .amenities-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
  }

  .amenity-item {
    display: flex;
    align-items: center;
    gap: var(--space);
    padding: var(--space);
    background: rgba(139, 115, 85, 0.03);
    border-radius: var(--radius-sm);
    transition: var(--transition);
  }

  .amenity-item:hover {
    background: rgba(139, 115, 85, 0.08);
    transform: translateY(-2px);
  }

  .amenity-icon {
    width: 40px;
    height: 40px;
    background: var(--color-primary);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    flex-shrink: 0;
  }

  .amenity-item span {
    font-weight: 500;
    color: var(--color-text);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: var(--breakpoint-sm)) {
    .amenities-list {
      grid-template-columns: 1fr;
      gap: var(--space);
    }

    .family-suite-info {
      flex-direction: column;
      text-align: center;
    }

    .family-suite-icon {
      align-self: center;
    }
  }
</style>
