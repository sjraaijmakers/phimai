---

<section class="guide-container">
  <!-- Guide Title -->
  <section class="guide-title-section">
    <div class="container">
      <h1 class="guide-title">{t('guide.title') as string}</h1>
    </div>
  </section>

  <!-- Guide Sections -->
  <section class="guide-sections">
    <div class="container guide-sections-grid">
      {
        guideSections.map((section, index) => (
          <GuideSection
            title={t(section.titleKey) as string}
            description={section.descriptionKey ? t(section.descriptionKey) as string : undefined}
            openingTimes={section.openingTimesKey ? t(section.openingTimesKey) as string : undefined}
            openingTimesLabel={t('guide.openingTimes') as string}
            images={section.images}
            mapSrc={section.mapUrl}
            sectionNumber={index + 1}
          />
        ))
      }
    </div>
  </section>
</section>

<style>
  /* Guide Container */
  .guide-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    background: var(--color-white);
  }

  /* Guide Title Section */
  .guide-title-section {
    padding: var(--space-md) 0;
  }

  .guide-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    text-align: left;
    margin: 0;
    line-height: var(--lh-heading);
  }

  /* Guide Sections */
  .guide-sections {
    position: relative;
  }

  .guide-sections-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }
</style>
