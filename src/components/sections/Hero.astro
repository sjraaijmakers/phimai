---
import { useTranslations, getLangFromUrl } from '../../i18n/ui';

// Get i18n translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="hero" class="hero">
  <div class="hero-background">
    <img src="/images/hero-tiny-home.jpg" alt="Phimai Pond House" class="hero-image">
    <div class="hero-overlay"></div>
  </div>
  
  <div class="hero-content">
    <div class="container">
      <h1 class="hero-title" data-i18n-key="hero.title">{t('hero.title')}</h1>
      <p class="hero-subtitle" data-i18n-key="hero.subtitle">{t('hero.subtitle')}</p>
      
      <div class="hero-buttons">
        <a href="#booking" class="btn btn-primary" data-i18n-key="hero.bookNow">{t('hero.bookNow')}</a>
        <a href="#gallery" class="btn btn-secondary" data-i18n-key="hero.viewGallery">{t('hero.viewGallery')}</a>
      </div>
    </div>
  </div>
</section>

