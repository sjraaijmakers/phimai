---
import { siteConfig } from '../../config/site';
import { galleryImages as rawGalleryImages } from '../../data/images';
import Carousel from '../ui/Carousel.astro';

// Use the first 5 images for the hero carousel
const heroImages = rawGalleryImages.slice(0, 5);
---

<section class="hero">
  <div class="hero-background">
    <Carousel 
      id="hero-carousel"
      images={heroImages}
      interval={6000}
      showArrows={false}
      showDots={true}
      autoPlay={true}
    />
    <div class="hero-overlay"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title" data-i18n="hero.title" />
      <p class="hero-subtitle" data-i18n="hero.subtitle" />
      
      <div class="hero-actions">
        <a href="#booking" class="btn btn-primary" data-i18n="hero.bookNow" />
        <a href="#gallery" class="btn btn-secondary" data-i18n="hero.viewGallery" />
      </div>
    </div>
  </div>
</section>

