---
import { t } from 'i18next';
import Carousel from '../ui/Carousel.astro';
import type { ImageConfig } from '../../data/images';

const heroImages: ImageConfig[] = [
  {
    src: '/images/hero-tiny-home.jpg'
  },
  {
    src: '/images/bedroom-cozy.jpg'
  },
  {
    src: '/images/exterior-cozy.jpg'
  },
  {
    src: '/images/garden-view.jpg'
  },
  {
    src: '/images/kitchen-cozy.jpg'
  },
];
---

<div class="hero-background">
  <!-- Hero Background Carousel -->
  <Carousel
    id="hero-carousel"
    images={heroImages}
    interval={5000}
    showArrows={false}
    showDots={true}
    autoPlay={true}
  />
</div>

<div class="hero-content">
  <div class="container">
    <!-- Hero Content -->
    <h1 class="hero-title">{t('hero.title')}</h1>
    <p class="hero-subtitle">{t('hero.subtitle')}</p>

    <div class="hero-buttons">
      <a href="#booking" class="btn btn-secondary">{t('hero.bookNow')}</a>
      <!-- <a href="#gallery" class="btn">{t('hero.viewGallery')}</a> -->
    </div>
  </div>
</div>

<style>
  /* ===== HERO BACKGROUND ===== */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
    width: 100%;
    max-width: none;
    margin: 0 auto;
    padding: var(--space-2xl);
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  /* ===== HERO CONTENT STYLES ===== */
  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-white);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    margin-bottom: var(--space-lg);
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-white);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    margin-bottom: var(--space-2xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-buttons .btn {
    min-width: 160px;
    padding: var(--space-lg) var(--space-2xl);
    font-size: 1.1rem;
    font-weight: 600;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: var(--breakpoint-sm)) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-buttons {
      align-items: center;
    }

    .hero-buttons .btn {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
