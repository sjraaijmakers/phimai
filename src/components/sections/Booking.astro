---
import { t } from 'i18next';
import { ArrowRight } from 'lucide-astro';
import { siteConfig } from '../../config/site';
import { Image } from 'astro:assets';

// Build providers list from unified config map
const providers = Object.entries(siteConfig.booking || {})
  .map(([key, value]) => {
    const v = value as any;
    if (!v || typeof v !== 'object') return null;
    return {
      key,
      name: v.name,
      href: v.url as string,
      logo: v.logo,
      i18nKey: `booking.${key}`,
      className: v.className,
      disabled: !v.url || !!v.disabled,
    };
  })
  .filter((p): p is NonNullable<typeof p> => p !== null)
  .sort((a, b) => a.name.localeCompare(b.name));
---

<!-- Booking Header -->
<div class="section-header">
  <h2 class="section-title">
    {t('booking.title')}
  </h2>
  <p class="section-subtitle">{t('booking.subtitle')}</p>
</div>

<!-- Booking Options -->
<div class="booking-options">
  {
    providers.map(p =>
      p.disabled ? (
        <div
          class={`booking-option btn ${p.className} disabled`}
          aria-disabled="true"
        >
          <div class="booking-logo">
            <Image
              src={p.logo}
              alt={p.name}
              class="logo-image"
              width={120}
              height={60}
              format="webp"
              quality={80}
            />
          </div>
          <div class="booking-content">
            <span>{t(p.i18nKey)}</span>
          </div>
          <div class="booking-arrow">
            <ArrowRight size={20} />
          </div>
        </div>
      ) : (
        <a
          href={p.href}
          class={`booking-option btn ${p.className}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          <div class="booking-logo">
            <Image
              src={p.logo}
              alt={p.name}
              class="logo-image"
              width={120}
              height={60}
              format="webp"
              quality={80}
            />
          </div>
          <div class="booking-content">
            <span>{t(p.i18nKey)}</span>
          </div>
          <div class="booking-arrow">
            <ArrowRight size={20} />
          </div>
        </a>
      )
    )
  }
</div>

<style>
  /* ===== BOOKING CONTENT STYLES ===== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
    position: relative;
    z-index: 2;
  }

  .booking-title-gold {
    color: var(--color-primary);
    position: relative;
    display: inline-block;
  }

  .sparkle {
    color: var(--color-accent);
    font-size: 1.5rem;
    animation: sparkle 2s ease-in-out infinite;
  }

  .sparkle-left {
    margin-right: var(--space);
  }

  .sparkle-right {
    margin-left: var(--space);
  }

  @keyframes sparkle {
    0%, 100% { opacity: 0.7; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.1); }
  }

  .section-subtitle {
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .booking-options {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .booking-option {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    background: var(--color-white);
    color: var(--color-text);
    border: 1px solid rgba(139, 115, 85, 0.1);
  }

  .booking-option::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .booking-option:hover {
    transform: translateY(-2px);
  }

  .booking-option:hover::before {
    opacity: 1;
  }

  .booking-option.disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .booking-option.disabled:hover {
    transform: none;
  }

  .booking-logo {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(139, 115, 85, 0.1);
  }

  .logo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
  }

  .booking-content {
    flex: 1;
    text-align: left;
    display: flex;
    align-items: center;
  }

  .booking-content span {
    font-weight: 600;
    color: var(--color-text);
  }

  .booking-arrow {
    color: inherit;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.8;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .booking-option:hover .booking-arrow {
    transform: translateX(4px);
    opacity: 1;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: var(--breakpoint-sm)) {
    .booking-options {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .booking-option {
      padding: var(--space);
    }

    .booking-content {
      text-align: left;
    }
  }
</style>
