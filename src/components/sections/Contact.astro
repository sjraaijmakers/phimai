---
import { siteConfig } from '../../config/site';
import { Mail, MessageCircle } from 'lucide-astro';
import { t } from 'i18next';
---

<!-- Contact Info -->
<div class="contact-info">
  <h2>{t('contact.title')}</h2>
  <p>{t('contact.description')}</p>

  <div class="contact-methods">
    <div class="contact-method">
      <div class="contact-icon">
        <Mail size={24} />
      </div>
      <div class="contact-details">
        <h4>{t('contact.email.label')}</h4>
        <a href={`mailto:${siteConfig.email}`}>{siteConfig.email}</a>
      </div>
    </div>

    <div class="contact-method messaging-method">
      <div class="contact-icon">
        <MessageCircle size={24} />
      </div>
      <div class="contact-details">
        <div class="messaging-buttons">
          <!-- Official WhatsApp Click to Chat Button -->
          <a
            href={`https://wa.me/${siteConfig.phone.replace(/\D/g, '')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="whatsapp-official-btn"
          >
            <img 
              src="/images/logos/whatsapp-logo.png" 
              alt="WhatsApp" 
              width="20" 
              height="20"
            />
            <span>{t('contact.whatsapp.label')}</span>
          </a>

          <a
            href={`https://line.me/ti/p/~${siteConfig.lineId}`}
            target="_blank"
            rel="noopener noreferrer"
            class="line-official-btn"
          >
            <img 
              src="/images/logos/line-logo.png" 
              alt="Line" 
              width="20" 
              height="20"
            />
            <span>{t('contact.line.label')}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contact Form -->
<div class="contact-form-container bg-secondary mask-banyan">
  <form class="contact-form" id="contactForm">
    <h3>{t('contact.form.title')}</h3>

    <div class="form-group">
      <label for="name">{t('contact.form.name')}</label>
      <input type="text" id="name" name="name" required />
    </div>

    <div class="form-group">
      <label for="email">{t('contact.form.email')}</label>
      <input type="email" id="email" name="email" required />
    </div>

    <div class="form-group">
      <label for="message">{t('contact.form.message')}</label>
      <textarea
        id="message"
        name="message"
        rows="5"
        minlength="10"
        maxlength="1000"
        required
        style="resize: vertical;"></textarea>
    </div>

    <button type="submit" class="btn btn-primary"
      >{t('contact.form.submit')}</button>
  </form>
</div>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    const endpoint = '${siteConfig.contactEndpoint}';

    if (!contactForm) return;

    contactForm.addEventListener('submit', async e => {
      e.preventDefault();

      const formData = new FormData(contactForm as HTMLFormElement);
      const data = Object.fromEntries(formData);

      try {
        const response = await fetch(endpoint, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          alert('Message sent successfully!');
          (contactForm as HTMLFormElement).reset();
        } else {
          alert('Failed to send message. Please try again.');
        }
      } catch (error) {
        console.error('Error sending message:', error);
        alert('Failed to send message. Please try again.');
      }
    });
  });
</script>

<style>
  /* ===== CONTACT CONTENT STYLES ===== */
  .contact-info p {
    margin-bottom: var(--space-2xl);
  }

  .contact-methods {
    margin-bottom: var(--space-2xl);
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: var(--space);
    margin-bottom: var(--space-lg);
  }

  .contact-icon {
    width: 48px;
    height: 48px;
    background: #f8f8f8;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent);
  }

  .contact-details h4 {
    margin: 0 0 0.25rem 0;
    font-weight: 500;
    color: var(--color-text);
  }

  .contact-details a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 400;
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .contact-details span {
    color: var(--color-text-light);
  }

  .messaging-buttons {
    display: flex;
    gap: var(--space);
    margin-top: var(--space);
    flex-wrap: wrap;
  }

  .messaging-method .contact-details {
    flex: 1;
  }

  .messaging-method .contact-details {
    margin-top: 0;
  }

  .messaging-buttons {
    display: flex;
    gap: var(--space);
    margin-top: 0;
    flex-wrap: wrap;
  }

  .messaging-btn {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-sm);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    border: 1px solid transparent;
    min-width: 140px;
    justify-content: center;
  }

  .messaging-btn:hover {
    transform: translateY(-2px);
    text-decoration: none;
  }

  .whatsapp-official-btn {
    background: #25d366 !important;
    color: white !important;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-sm);
    text-decoration: none !important;
    font-weight: 500;
    transition: var(--transition);
    border: 1px solid transparent;
    min-width: 140px;
    justify-content: center;
  }

  .whatsapp-official-btn:hover {
    background: #1a8f5f !important;
    color: white !important;
    transform: translateY(-2px);
    text-decoration: none !important;
  }

  .whatsapp-official-btn img {
    /* Remove filter since PNG logos have their own colors */
  }

  .whatsapp-official-btn span {
    color: white !important;
  }

  .line-official-btn {
    background: #00b900 !important;
    color: white !important;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-sm);
    text-decoration: none !important;
    font-weight: 500;
    transition: var(--transition);
    border: 1px solid transparent;
    min-width: 140px;
    justify-content: center;
  }

  .line-official-btn:hover {
    background: #008000 !important;
    color: white !important;
    transform: translateY(-2px);
    text-decoration: none !important;
  }

  .line-official-btn img {
    /* Remove filter since PNG logos have their own colors */
  }

  .line-official-btn span {
    color: white !important;
  }

  .btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .qr-codes-section {
    margin-top: var(--space-xl);
  }

  .qr-toggle {
    margin-bottom: var(--space);
  }

  .qr-toggle-btn {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space);
    background: transparent;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: var(--transition);
    font-size: 0.9rem;
  }

  .qr-toggle-btn:hover {
    background: var(--color-primary);
    color: white;
  }

  .qr-codes-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
    max-width: 400px;
  }

  .contact-form-container {
    background: #f5f1eb;
    padding: var(--space-xl);
    border-radius: var(--radius);
    position: relative;
    overflow: hidden;
  }

  .contact-form-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.04);
    -webkit-mask-image: url('/src/assets/banyan-vines-thick.png');
    -webkit-mask-repeat: repeat;
    -webkit-mask-size: 100px 100px;
    mask-image: url('/src/assets/banyan-vines-thick.png');
    mask-repeat: repeat;
    mask-size: 100px 100px;
    pointer-events: none;
    z-index: 1;
  }

  .contact-form h3 {
    margin: 0 0 var(--space-xl) 0;
  }

  .form-group {
    margin-bottom: var(--space-lg);
  }

  .form-group:last-child {
    margin-bottom: 0;
  }

  .form-group label {
    display: block;
    margin-bottom: var(--space-sm);
    font-weight: 500;
    color: var(--color-text);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--space);
    border: 1px solid rgba(212, 196, 176, 0.4);
    border-radius: var(--radius-sm);
    font-size: 1rem;
    transition:
      border-color 0.3s ease,
      box-shadow 0.3s ease;
    font-family: var(--font-secondary);
    background-color: #ffffff !important;
    background-image: none !important;
    box-shadow: var(--shadow-sm);
  }

  .form-group textarea {
    height: 120px;
    min-height: 120px;
    resize: vertical;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    background-color: #ffffff !important;
    background-image: none !important;
    box-shadow:
      var(--shadow-md),
      0 0 0 3px rgba(139, 115, 85, 0.1);
  }

  .contact-form .btn {
    width: 100%;
  }

  /* Center the contact form submit button and make it auto-width */
  .contact-form button[type='submit'],
  .contact-form .btn[type='submit'] {
    display: block;
    width: max-content;
    margin: var(--space) auto 0;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 768px) {
    .contact-info h2 {
      font-size: 2rem;
    }
    .contact-form-container {
      padding: var(--space-lg);
    }

    .messaging-buttons {
      flex-direction: column;
    }

    .messaging-btn {
      width: 100%;
    }

    .qr-codes-grid {
      grid-template-columns: 1fr;
      gap: var(--space);
    }
  }
</style>
