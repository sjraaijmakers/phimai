---
import { siteConfig } from '../config/site';
import { Wifi, Coffee, Car, Utensils, WashingMachine, CheckCircle, Package } from 'lucide-astro';
---

<section id="about" class="about section">
  <div class="container">
    <div class="about-content">
      <div class="about-info">
        <h2 data-i18n="about.title" />
        <p data-i18n="about.intro" />

        <div class="amenities">
          <h3 data-i18n="about.amenities.title" />
          <div class="amenities-grid">
            <div class="amenity-item">
              <div class="amenity-icon">
                <Wifi size={20} />
              </div>
              <span data-i18n="about.amenities.wifi" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <Coffee size={20} />
              </div>
              <span data-i18n="about.amenities.coffee" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <Car size={20} />
              </div>
              <span data-i18n="about.amenities.freeBikes" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <Utensils size={20} />
              </div>
              <span data-i18n="about.amenities.kitchenette" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <WashingMachine size={20} />
              </div>
              <span data-i18n="about.amenities.washingMachine" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <Package size={20} />
              </div>
              <span data-i18n="about.amenities.transfer" />
            </div>
          </div>
        </div>

        <div class="conclusion-section">
          <div class="feature">
            <div class="feature-icon">
              <CheckCircle size={24} />
            </div>
            <div class="feature-content">
              <h3 data-i18n="about.familySuite.title" />
              <p data-i18n="about.familySuite.description" />
            </div>
          </div>
        </div>
      </div>

      <div class="about-image">
        <img src="/images/family-suite.jpg" alt="Family suite at Phimai Pond House" />
      </div>
    </div>
  </div>
</section>

