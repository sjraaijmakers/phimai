---
import { siteConfig } from '../config/site';
---

<section id="about" class="about">
  <div class="container">
    <div class="about-content">
      <div class="about-text">
        <div class="hero-section">
          <h2 data-i18n="about.title" />
          <p data-i18n="about.intro" />
        </div>
        
        <div class="amenities">
          <h3 data-i18n="about.amenities.title" />
          <div class="amenities-grid">
            <div class="amenity-item">
              <div class="amenity-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <span data-i18n="about.amenities.washingMachine" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <span data-i18n="about.amenities.kitchenette" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <span data-i18n="about.amenities.snacks" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <span data-i18n="about.amenities.essentials" />
            </div>
            <div class="amenity-item">
              <div class="amenity-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
              </div>
              <span data-i18n="about.amenities.transfer" />
            </div>
          </div>
        </div>

        <div class="conclusion-section">
          <div class="feature">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
              </svg>
            </div>
            <div class="feature-content">
              <h3 data-i18n="about.familySuite.title" />
              <p data-i18n="about.familySuite.description" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

