---
import { siteConfig } from '../config/site';
import { WashingMachine, Utensils, Coffee, Package, Bike, Users, Car } from 'lucide-astro';
---

<section id="about" class="about section">
  <div class="container">
    <div class="about-content">
      <div class="about-info">
        <h2 data-i18n="about.title" />
        <p data-i18n="about.intro" />
        
        <div class="feature-section">
          <div class="feature-box">
            <div class="feature-icon bikes">
              <Bike size={24} />
            </div>
            <div class="feature-content">
              <p data-i18n="about.bikes" />
            </div>
          </div>
        </div>

        <div class="feature-section">
          <div class="feature-box">
            <div class="feature-icon family">
              <Users size={24} />
            </div>
            <div class="feature-content">
              <h3 data-i18n="about.familySuite.title" />
              <p data-i18n="about.familySuite.description" />
            </div>
          </div>
        </div>
      </div>

      <div class="amenities">
        <h3 data-i18n="about.amenities.title" />
        <div class="amenities-list">
          <div class="amenity-item">
            <div class="amenity-icon">
              <WashingMachine size={20} />
            </div>
            <span data-i18n="about.amenities.washingMachine" />
          </div>
          <div class="amenity-item">
            <div class="amenity-icon">
              <Utensils size={20} />
            </div>
            <span data-i18n="about.amenities.kitchenette" />
          </div>
          <div class="amenity-item">
            <div class="amenity-icon">
              <Coffee size={20} />
            </div>
            <span data-i18n="about.amenities.snacks" />
          </div>
          <div class="amenity-item">
            <div class="amenity-icon">
              <Package size={20} />
            </div>
            <span data-i18n="about.amenities.essentials" />
          </div>
          <div class="amenity-item">
            <div class="amenity-icon">
              <Car size={20} />
            </div>
            <span data-i18n="about.amenities.transfer" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

