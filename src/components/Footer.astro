---
import ScrollToTop from './ScrollToTop.astro';
import LanguageSelector from './LanguageSelector.astro';
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-copyright">
        <p>&copy; 2024 Phimai Pond House. All rights reserved.</p>
      </div>
      <div class="footer-actions">
        <ScrollToTop id="footerScrollToTop" className="footer-style" />
        <LanguageSelector />
      </div>
    </div>
  </div>
</footer>





<style>
  .footer {
    background: var(--glass-bg);
    color: #666;
    padding: 2rem 2rem;
    border-top: 1px solid var(--glass-border);
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--secondary-gradient);
    opacity: 0.8;
    z-index: -1;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .footer-section h3 {
    font-family: 'Crimson Text', serif;
    color: #FFFFFF;
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .footer-section p {
    color: #C8C8C8;
    line-height: 1.7;
    margin: 0 0 1.5rem 0;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.75rem;
  }

  .footer-section a {
    color: #C8C8C8;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 400;
  }

  .footer-section a:hover {
    color: #D4C4B0;
  }

  .footer-section svg {
    color: #45B7D1;
    flex-shrink: 0;
  }

  .amenity-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    color: #C8C8C8;
    font-family: 'Inter', sans-serif;
    font-weight: 400;
  }

  .amenity-item svg {
    color: #4ECDC4;
    width: 16px;
    height: 16px;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 1.5rem 1rem;
    }

         .footer-content {
       flex-direction: column;
       text-align: center;
       gap: 1.5rem;
     }

     .footer-actions {
       flex-direction: column;
       gap: 1rem;
     }
  }

  .footer-copyright p {
    color: #666;
    margin: 0;
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    font-weight: 400;
  }


</style>