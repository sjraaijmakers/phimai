    font-size: 0.875rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .footer-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #888888;
    font-size: 0.875rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .footer-location svg {
    color: #45B7D1;
  }

