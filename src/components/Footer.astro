    font-family: 'Playfair Display', serif;
    color: #FFFFFF;
    margin: 0 0 1rem 0;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .contact-item svg {
    color: #45B7D1;
    flex-shrink: 0;
  }

