    color: #B8B8B8;
    text-decoration: none;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    transition: color 0.3s ease;
  }

  .booking-links a:hover {
    color: #8B7355;
  }

