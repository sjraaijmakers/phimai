---
import ScrollToTop from './ui/ScrollToTop.astro';
import { t } from 'i18next';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-copyright">
        <p>
          &copy; {currentYear} Phimai Pond House. <span
            >{t('footer.copyright')}</span
          >
        </p>
      </div>
      <div class="footer-actions">
        <div class="scroll-to-top-wrapper">
          <ScrollToTop
            id="footerScrollToTop"
            className="footer-style"
            i18nKey="footer.scrollToTop"
          />
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* ===== FOOTER ===== */
  .footer {
    background: var(--gradient-muted);
    padding: var(--space-lg);
    border-top: 1px solid rgba(139, 115, 85, 0.1);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xl);
  }

  .footer-actions {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: var(--breakpoint-sm)) {
    .footer {
      padding: var(--space) var(--space);
    }
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-lg);
    }
  }
</style>
