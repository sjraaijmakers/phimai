<style>
  .footer {
    background: linear-gradient(135deg, #3A3A3A 0%, #2C2C2C 100%);
    color: white;
    padding: 3rem 2rem 1.5rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    font-family: 'Crimson Text', serif;
    color: #FFFFFF;
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .footer-section p {
    color: #C8C8C8;
    line-height: 1.7;
    margin: 0 0 1.5rem 0;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.75rem;
  }

  .footer-section a {
    color: #C8C8C8;
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 400;
  }

  .footer-section a:hover {
    color: #D4C4B0;
  }

  .footer-section svg {
    color: #45B7D1;
    flex-shrink: 0;
  }

  .amenity-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    color: #C8C8C8;
    font-family: 'Inter', sans-serif;
    font-weight: 400;
  }

  .amenity-item svg {
    color: #4ECDC4;
    width: 16px;
    height: 16px;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 2rem 1rem 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .social-links {
      justify-content: center;
    }
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid #404040;
  }

  .footer-copyright p {
    color: #A8A8A8;
    margin: 0;
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
  }

  .footer-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #A8A8A8;
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
  }
</style>