  }

  .hero-text p {
    font-size: 1.2rem;
    color: #5A5A5A;
    line-height: 1.7;
    margin-bottom: 2rem;
    font-weight: 400;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
