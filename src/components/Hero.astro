---
import { siteConfig } from '../config/site';
import { galleryImages as rawGalleryImages } from '../data/images';

// Get the first image from gallery for hero background
const heroImage = rawGalleryImages[0];
const heroImageSrc = `/images/${heroImage.filename}`;
const heroImageAlt = heroImage.alt;
---

<section class="hero">
  <div class="hero-background">
    <img src={heroImageSrc} alt={heroImageAlt} class="hero-image">
    <div class="hero-overlay"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title" data-i18n="hero.title" />
      <p class="hero-subtitle" data-i18n="hero.subtitle" />
      
      <div class="hero-actions">
        <a href="#booking" class="btn btn-primary" data-i18n="hero.bookNow" />
        <a href="#gallery" class="btn btn-secondary" data-i18n="hero.viewGallery" />
      </div>
    </div>
  </div>
</section>

