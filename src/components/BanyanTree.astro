---
interface Props {
  className?: string;
  size?: string;
  color?: string;
}

const { 
  className = "", 
  size = "100%", 
  color = "currentColor" 
} = Astro.props;
---

<svg 
  class={`banyan-tree ${className}`}
  width={size} 
  height={size} 
  viewBox="0 0 200 200" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Main trunk -->
  <path 
    d="M100 180 L100 120 Q100 100 95 90 Q90 80 85 75 Q80 70 75 65 Q70 60 65 55 Q60 50 55 45 Q50 40 45 35 Q40 30 35 25 Q30 20 25 15 Q20 10 15 5 Q10 0 5 0" 
    stroke={color} 
    stroke-width="2" 
    stroke-linecap="round"
    opacity="0.8"
  />
  
  <!-- Aerial roots -->
  <path 
    d="M85 140 Q80 150 75 155 Q70 160 65 165 Q60 170 55 175 Q50 180 45 185" 
    stroke={color} 
    stroke-width="1" 
    stroke-linecap="round"
    opacity="0.4"
  />
  <path 
    d="M115 140 Q120 150 125 155 Q130 160 135 165 Q140 170 145 175 Q150 180 155 185" 
    stroke={color} 
    stroke-width="1" 
    stroke-linecap="round"
    opacity="0.4"
  />
  <path 
    d="M90 120 Q85 130 80 135 Q75 140 70 145 Q65 150 60 155" 
    stroke={color} 
    stroke-width="1" 
    stroke-linecap="round"
    opacity="0.3"
  />
  <path 
    d="M110 120 Q115 130 120 135 Q125 140 130 145 Q135 150 140 155" 
    stroke={color} 
    stroke-width="1" 
    stroke-linecap="round"
    opacity="0.3"
  />
  
  <!-- Canopy branches -->
  <path 
    d="M100 80 Q80 70 70 60 Q60 50 55 40 Q50 30 45 20" 
    stroke={color} 
    stroke-width="1.5" 
    stroke-linecap="round"
    opacity="0.6"
  />
  <path 
    d="M100 80 Q120 70 130 60 Q140 50 145 40 Q150 30 155 20" 
    stroke={color} 
    stroke-width="1.5" 
    stroke-linecap="round"
    opacity="0.6"
  />
  <path 
    d="M100 70 Q85 60 75 50 Q65 40 60 30 Q55 20 50 10" 
    stroke={color} 
    stroke-width="1" 
    stroke-linecap="round"
    opacity="0.5"
  />
  <path 
    d="M100 70 Q115 60 125 50 Q135 40 140 30 Q145 20 150 10" 
    stroke={color} 
    stroke-width="1" 
    stroke-linecap="round"
    opacity="0.5"
  />
  
  <!-- Leaf clusters -->
  <circle cx="40" cy="15" r="3" fill={color} opacity="0.3"/>
  <circle cx="160" cy="15" r="3" fill={color} opacity="0.3"/>
  <circle cx="50" cy="25" r="2" fill={color} opacity="0.2"/>
  <circle cx="150" cy="25" r="2" fill={color} opacity="0.2"/>
  <circle cx="60" cy="35" r="2.5" fill={color} opacity="0.25"/>
  <circle cx="140" cy="35" r="2.5" fill={color} opacity="0.25"/>
  <circle cx="70" cy="45" r="2" fill={color} opacity="0.2"/>
  <circle cx="130" cy="45" r="2" fill={color} opacity="0.2"/>
  <circle cx="80" cy="55" r="2.5" fill={color} opacity="0.25"/>
  <circle cx="120" cy="55" r="2.5" fill={color} opacity="0.25"/>
</svg>

<style>
  .banyan-tree {
    transition: all 0.3s ease;
  }
  
  .banyan-tree:hover {
    transform: scale(1.05);
    filter: brightness(1.1);
  }
  
  /* Subtle animation for the aerial roots */
  .banyan-tree path:nth-child(n+2):nth-child(-n+6) {
    animation: sway 4s ease-in-out infinite;
  }
  
  .banyan-tree path:nth-child(7) {
    animation: sway 4s ease-in-out infinite 0.5s;
  }
  
  .banyan-tree path:nth-child(8) {
    animation: sway 4s ease-in-out infinite 1s;
  }
  
  .banyan-tree path:nth-child(9) {
    animation: sway 4s ease-in-out infinite 1.5s;
  }
  
  @keyframes sway {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(1px); }
  }
</style>
