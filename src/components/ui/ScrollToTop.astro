---
import { ChevronUp } from 'lucide-astro';
import { t } from 'i18next';

export interface Props {
  id?: string;
  className?: string;
  i18nKey?: string;
}

const { id = 'scrollToTop', className = '', i18nKey } = Astro.props;
---

<button id={id} class={`scroll-to-top ${className}`}>
  {i18nKey && <a href="#top" class="scroll-to-top-text">{t(i18nKey)}</a>}
  <ChevronUp size={20} />
</button>

<style>
  .scroll-to-top {
    width: auto;
    height: auto;
    min-width: 32px;
    min-height: 32px;
    padding: var(--space-xs) var(--space-sm);
    background: transparent;
    border: none;
    border-radius: var(--radius-sm);
    color: var(--color-text);
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    border: 1px solid rgba(139, 115, 85, 0.2);
  }

  .scroll-to-top:hover {
    background: rgba(139, 115, 85, 0.1);
    color: var(--color-primary);
    transform: translateY(-1px);
    border-color: rgba(139, 115, 85, 0.3);
  }

  /* Scroll to top with text styling */
  .scroll-to-top-text {
    font-size: 0.875rem;
    font-weight: 500;
    color: inherit;
    cursor: pointer;
    user-select: none;
    text-decoration: none;
  }

  /* Ensure icon and text are properly aligned */
  .scroll-to-top svg {
    flex-shrink: 0;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: var(--breakpoint-sm)) {
    .scroll-to-top {
      padding: var(--space-xs);
      min-width: auto;
      min-height: auto;
    }

    .scroll-to-top-text {
      font-size: 0.8rem;
    }
  }
</style>
