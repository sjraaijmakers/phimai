---
import { ChevronUp } from 'lucide-astro';
import { t } from 'i18next';

export interface Props {
  id?: string;
  className?: string;
  i18nKey?: string;
}

const { id = 'scrollToTop', className = '', i18nKey } = Astro.props;
---

<a href="#top" id={id} class={`scroll-to-top ${className}`}>
  {i18nKey && <span class="scroll-to-top-text">{t(i18nKey)}</span>}
  <ChevronUp size={20} />
</a>

<style>
  .scroll-to-top {
    width: auto;
    height: auto;
    min-width: 32px;
    min-height: 32px;
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-white);
    opacity:  ;
    border: none;
    border-radius: var(--radius-sm);
    color: var(--color-text);
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    border: 1px solid rgba(139, 115, 85, 0.2);
    text-decoration: none;
  }

  .scroll-to-top:hover {
    transform: translateY(-1px);
    text-decoration: none;
  }

  /* Scroll to top with text styling */
  .scroll-to-top-text {
    color: inherit;
    cursor: pointer;
    user-select: none;
  }

  /* Ensure icon and text are properly aligned */
  .scroll-to-top svg {
    flex-shrink: 0;
  }
</style>
