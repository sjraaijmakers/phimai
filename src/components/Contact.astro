<section id="contact" class="contact">
  <div class="container">
    <div class="contact-content">
      <div class="contact-info">
        <h2>Book Your Stay</h2>
        <p>Ready to experience Phimai? Book directly through our platforms or contact us for availability and special requests.</p>

        <div class="contact-methods">
          <div class="contact-method">
            <div class="contact-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div class="contact-details">
              <h4>Email</h4>
              <a href="mailto:stay@phimaitinyhomes.com">stay@phimaitinyhomes.com</a>
            </div>
          </div>

          <div class="contact-method">
            <div class="contact-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div class="contact-details">
              <h4>Phone</h4>
              <a href="tel:+66123456789">+66 12 345 6789</a>
            </div>
          </div>

          <div class="contact-method">
            <div class="contact-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12,6 12,12 16,14"></polyline>
              </svg>
            </div>
            <div class="contact-details">
              <h4>Response Time</h4>
              <span>Usually within 1 hour</span>
            </div>
          </div>
        </div>
      </div>

      <div class="contact-form-container">
        <form class="contact-form">
          <h3>Contact Us</h3>
          
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required>
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" placeholder="Tell us about your travel plans and any questions you have..."></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 5rem 2rem;
    background: #FEFEFE;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact-info h2 {
    font-family: 'Crimson Text', serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: #3A3A3A;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .contact-info p {
    font-size: 1.15rem;
    color: #6B6B6B;
    line-height: 1.7;
    margin-bottom: 3rem;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
  }

  .contact-methods {
    margin-bottom: 3rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .contact-icon {
    width: 48px;
    height: 48px;
    background: #F8F8F8;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #45B7D1;
  }

  .contact-details h4 {
    margin: 0 0 0.25rem 0;
    font-weight: 500;
    color: #3A3A3A;
    font-family: 'Inter', sans-serif;
  }

  .contact-details a {
    color: #8B7355;
    text-decoration: none;
    font-weight: 400;
    font-family: 'Inter', sans-serif;
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .contact-details span {
    color: #6B6B6B;
    font-family: 'Inter', sans-serif;
  }

  .contact-form-container {
    background: linear-gradient(135deg, #FBF9F6 0%, #F5F1EB 100%);
    padding: 2rem;
    border-radius: var(--border-radius);
    border: 1px solid #E8E0D6;
    box-shadow: 0 8px 30px rgba(139, 115, 85, 0.08);
  }

  .contact-form h3 {
    font-family: 'Crimson Text', serif;
    font-size: 1.6rem;
    font-weight: 600;
    color: #3A3A3A;
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #3A3A3A;
    font-family: 'Inter', sans-serif;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #D4C4B0;
    border-radius: var(--border-radius-sm);
    font-size: 1rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    font-family: 'Inter', sans-serif;
    background: rgba(255, 255, 255, 0.8);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #8B7355;
    box-shadow: 0 0 0 3px rgba(139, 115, 85, 0.15);
    background: rgba(255, 255, 255, 1);
  }

  .contact-form .btn {
    width: 100%;
  }

  @media (max-width: 768px) {
    .contact {
      padding: 3rem 1rem;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-info h2 {
      font-size: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form-container {
      padding: 1.5rem;
    }
  }
</style>