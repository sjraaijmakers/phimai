---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Animations from "../../components/ui/Animations.astro";
import Breadcrumb from "../../components/sections/Breadcrumb.astro";
import GuideContainer from "../../components/sections/GuideContainer.astro";
import i18next, { changeLanguage } from "i18next";

changeLanguage("th");
---

<Layout lang={i18next.language}>
  <Header hideNavigation={true} />

  <main class="guide-main">
    <Breadcrumb currentPage="guide" currentPageKey="breadcrumbs.guide" />
    <GuideContainer />
  </main>

  <Footer />
  <Animations />
</Layout>

<style>
  /* Guide Main */
  .guide-main {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    padding: var(--space-2xl) 0;
    background: var(--color-white);
  }

  /* Guide Title Section */
  .guide-title-section {
    padding: var(--space-md) 0;
    /* Removed background */
  }

  .guide-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    text-align: left;
    margin: 0;
    line-height: var(--lh-heading);
  }

  /* Guide Sections */
  .guide-sections {
    /* Removed background to match breadcrumbs and title */
    position: relative;
  }

  .guide-sections-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  /* Getting Around Section */
  .getting-around {
    padding: var(--space-4xl) 0;
    background: var(--gradient-cool);
  }

  .getting-around-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .getting-around-text h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--lh-heading);
  }



  .getting-around-map {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .map-iframe {
    width: 100%;
    height: 400px;
    border: none;
  }

  /* Best Time Section */
  .best-time {
    padding: var(--space-4xl) 0;
    background: var(--gradient-warm);
    text-align: center;
  }

  .best-time-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .best-time-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--gradient-primary);
    border-radius: 50%;
    margin-bottom: var(--space-xl);
    color: var(--color-white);
    box-shadow: var(--shadow-lg);
  }

  .best-time h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--lh-heading);
  }

  .best-time p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 768px) {
    .getting-around-content {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }



    .map-iframe {
      height: 300px;
    }
  }


</style>