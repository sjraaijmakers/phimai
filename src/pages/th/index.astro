---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Hero from "../../components/sections/Hero.astro";
import Gallery from "../../components/sections/Gallery.astro";
import Location from "../../components/sections/Location.astro";
import About from "../../components/sections/About.astro";
import Booking from "../../components/sections/Booking.astro";
import Contact from "../../components/sections/Contact.astro";
import Footer from "../../components/Footer.astro";
import Animations from "../../components/ui/Animations.astro";
import i18next, { changeLanguage } from "i18next";

changeLanguage("th");
---

<Layout lang={i18next.language}>
  <Header hideNavigation={false} />
  <main>
    <!-- Hero Section -->
    <section id="hero" class="hero">
      <Hero />
    </section>

    <!-- About Section -->
    <section id="about" class="about section bg-white">
      <div class="container">
        <div class="about-content">
          <About />
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="gallery section bg-secondary mask-banyan">
      <div class="container">
        <div class="gallery-content">
          <Gallery />
        </div>
      </div>
    </section>

    <!-- Location Section -->
    <section id="location" class="location section bg-white">
      <div class="container">
        <div class="location-section">
          <Location />
        </div>
      </div>
    </section>

    <!-- Booking Section -->
    <section id="booking" class="booking section bg-primary mask-banyan">
      <div class="container">
        <Booking />
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section">
      <div class="container">
        <div class="contact-content">
          <Contact />
        </div>
      </div>
    </section>
  </main>
  <Footer />
  <Animations />
</Layout>

<style>
  /* ===== HERO SECTION ===== */
  .hero {
    position: relative;
    min-height: calc(100vh - var(--header-height));
    padding-bottom: env(safe-area-inset-bottom, 0px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @supports (height: 100svh) {
    .hero {
      min-height: calc(100svh - var(--header-height));
    }
  }

  @supports (height: 100dvh) {
    .hero {
      min-height: calc(100dvh - var(--header-height));
    }
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
    width: 100%;
    max-width: none;
    margin: 0 auto;
    padding: var(--space-2xl);
    position: relative;
    z-index: 2;
  }

  /* ===== ABOUT SECTION ===== */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  /* ===== GALLERY SECTION ===== */
  .gallery-content {
    position: relative;
    z-index: 2;
  }

  /* ===== LOCATION SECTION ===== */
  .location-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  /* ===== BOOKING SECTION ===== */
  /* Background and mask handled by reusable classes */

  /* ===== CONTACT SECTION ===== */
  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 768px) {
    .about-content,
    .location-section,
    .contact-content {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
  }
</style>