---
import { changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LightboxCarousel from "../components/ui/LightboxCarousel.astro";

changeLanguage("en");
---

<Layout>
  <Header hideNavigation={true} />
  <main class="section">
    <div class="container">
      <h1>GLightbox Demo</h1>
      <p>Tap an image to open the lightbox.</p>

      <LightboxCarousel
        images={[
          { src: '/images/bedroom-cozy.jpg', desc: 'Bedroom cozy' },
          { src: '/images/garden-view.jpg', desc: 'Garden view' },
          { src: '/images/kitchen-cozy.jpg', desc: 'Kitchen cozy' },
          { src: '/images/exterior-evening.jpg', desc: 'Exterior evening' },
          { src: '/images/living-cozy.jpg', desc: 'Living cozy' },
          { src: '/images/terrace-view.jpg', desc: 'Terrace view' },
        ]}
        galleryId="demo"
      />
    </div>
  </main>
  <Footer />
</Layout>

<script>
  // GLightbox and Swiper are imported & initialized globally in Layout

  document.addEventListener('DOMContentLoaded', () => {
    // Global initializers handle both GLightbox and Swiper
  });
</script>

<style>
  .swiper {
    width: 100%;
    /* Override Swiper default blue theme */
    --swiper-navigation-color: #ffffff;
    --swiper-pagination-color: #ffffff;
  }
  .swiper-slide a,
  .swiper-slide img {
    width: 100%;
  }
  .swiper-slide img {
    height: 240px;
    object-fit: cover;
    border-radius: var(--radius-sm);
    box-shadow: var(--shadow-sm);
  }
  @media (max-width: 640px) {
    .swiper-slide img { height: 220px; }
  }

  /* Tweak GLightbox controls to avoid default blue look */
  :global(.glightbox-clean .gbtn) {
    color: #fff;
    background: rgba(0, 0, 0, 0.45);
    border-radius: 9999px;
  }

  /* Style Swiper nav buttons to avoid blue icons and improve contrast */
  :global(.swiper-button-prev),
  :global(.swiper-button-next) {
    width: 44px;
    height: 44px;
    border-radius: 9999px;
    background: rgba(0, 0, 0, 0.45);
    color: #ffffff;
    backdrop-filter: blur(2px);
  }
  :global(.swiper-button-prev::after),
  :global(.swiper-button-next::after) {
    font-size: 18px;
    font-weight: 700;
  }
</style>


