---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Animations from '../components/ui/Animations.astro';
import GuideSection from '../components/sections/GuideSection.astro';
import { MapPin, Clock, Camera, Utensils, Users, TreePine, Landmark, ShoppingBag } from 'lucide-astro';
import type { ImageConfig } from '../data/images';
import { useTranslations, getLangFromUrl } from '../i18n/ui';

// Get i18n translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Define guide sections data structure
const guideSections = [
  {
    id: 'chicken',
    titleKey: 'guide.sections.chicken.title',
    images: [
      { src: '/images/chicken-front.jpg' },
      { src: '/images/chicken-man.jpg' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4937!3d15.2180!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sBest%20Grilled%20Chicken%20Phimai!5e0!3m2!1sen!2sth!4v1755585214033"
  },
  {
    id: 'boatNoodle',
    titleKey: 'guide.sections.boatNoodle.title',
    images: [
      { src: '/images/boat-noodle.jpg', caption: 'Air Conditioned Boat Noodle Shop' },
      { src: '/images/boat-noodle-far.jpg', caption: 'Comfortable Dining Experience' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4940!3d15.2185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sBoat%20Noodle%20Shop%20Phimai!5e0!3m2!1sen!2sth!4v1755585214034"
  },
  {
    id: 'market',
    titleKey: 'guide.sections.market.title',
    images: [
      { src: '/images/market-uncle.jpg', caption: 'The Morning Market' },
      { src: '/images/market-auntie.jpg', caption: 'Fresh Local Produce' },
      { src: '/images/marktet-auntie2.jpg', caption: 'Traditional Market Experience' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4945!3d15.2182!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sPhimai%20Morning%20Market!5e0!3m2!1sen!2sth!4v1755585214035"
  },
  {
    id: 'coffee',
    titleKey: 'guide.sections.coffee.title',
    images: [
      { src: '/images/coffee-cafe.jpg', caption: 'Best Coffee, Cafe in Town' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4948!3d15.2183!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sBest%20Coffee%20Cafe%20Phimai!5e0!3m2!1sen!2sth!4v1755585214036"
  }
];
---

<Layout lang="en" customSEO={{
  title: "Insider's Guide to Phimai - Discover Ancient Temples & Local Culture",
  description: "Your insider's guide to Phimai, Thailand. Explore the ancient Khmer temple, Sai Ngam banyan trees, local markets, and authentic Isaan cuisine.",
  keywords: "Phimai guide, Phimai Historical Park, Sai Ngam, Isaan culture, Thailand travel",
  canonical: "https://phimaipondhouse.com/guide"
}}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="guide-hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title" data-i18n="guide.title" />
          
        </div>
      </div>
      <div class="hero-background">
        <div class="hero-image-overlay"></div>
      </div>
    </section>

    <!-- Guide Sections -->
    <section class="guide-sections">
      <div class="container">
        {guideSections.map((section) => (
          <GuideSection 
            title={t(section.titleKey)}
            images={section.images}
            mapSrc={section.mapUrl}
            carouselId={`${section.id}-carousel`}
            lightboxId={`${section.id}-lightbox`}
          />
        ))}
      </div>
    </section>


  </main>

     <Footer />
   <Animations />
 </Layout>

<style>
  /* Guide Hero Section */
  .guide-hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    background: var(--gradient-primary);
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/images/temple.jpg') center/cover;
    z-index: 1;
  }

  .hero-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(139, 115, 85, 0.8) 0%, rgba(166, 124, 82, 0.7) 50%, rgba(196, 164, 132, 0.6) 100%);
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: var(--color-white);
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-4xl) 0;
  }

  .hero-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    line-height: var(--lh-heading);
    margin-bottom: var(--space-lg);
  }



  /* Guide Sections */
  .guide-sections {
    padding: 0;
    background: var(--gradient-secondary);
  }



  /* Getting Around Section */
  .getting-around {
    padding: var(--space-4xl) 0;
    background: var(--gradient-cool);
  }

  .getting-around-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .getting-around-text h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--lh-heading);
  }

  

  .distances-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
  }

  .distance-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-white);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
  }

  .distance-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .distance-item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .distance-item h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 var(--space-xs) 0;
  }

  .distance-item span {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  .getting-around-map {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .map-iframe {
    width: 100%;
    height: 400px;
    border: none;
  }

  /* Best Time Section */
  .best-time {
    padding: var(--space-4xl) 0;
    background: var(--gradient-warm);
    text-align: center;
  }

  .best-time-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .best-time-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--gradient-primary);
    border-radius: 50%;
    margin-bottom: var(--space-xl);
    color: var(--color-white);
    box-shadow: var(--shadow-lg);
  }

  .best-time h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--lh-heading);
  }

  .best-time p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .guide-hero {
      min-height: 50vh;
    }

    .hero-content {
      padding: var(--space-2xl) 0;
    }

    .getting-around-content {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .distances-grid {
      grid-template-columns: 1fr;
    }

    .map-iframe {
      height: 300px;
    }
  }

      @media (max-width: 480px) {
      .section-header {
        margin-bottom: var(--space-2xl);
      }

      .distance-item {
        padding: var(--space-md);
      }
    }
</style>
