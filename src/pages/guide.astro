---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Animations from '../components/ui/Animations.astro';
import GuideSection from '../components/sections/GuideSection.astro';
import type { ImageConfig } from '../data/images';
import { useTranslations, getLangFromUrl } from '../i18n/ui';

// Get i18n translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Define guide sections data structure
const guideSections = [

  {
    id: 'saiNgam',
    titleKey: 'guide.sections.saiNgam.title',
    images: [
      { src: '/images/sai-gnam-front.jpg' },
      { src: '/images/sai-gnam-pond.jpg' },
      { src: '/images/sai-gnam-bench.jpg' },
      { src: '/images/sai-gnam-shadow.jpg' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4950!3d15.2184!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sSai%20Ngam%20Banyan%20Trees!5e0!3m2!1sen!2sth!4v1755585214037"
  },
  {
    id: 'chicken',
    titleKey: 'guide.sections.chicken.title',
    images: [
      { src: '/images/chicken-front.jpg' },
      { src: '/images/chicken-man.jpg' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4937!3d15.2180!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sBest%20Grilled%20Chicken%20Phimai!5e0!3m2!1sen!2sth!4v1755585214033"
  },
  {
    id: 'boatNoodle',
    titleKey: 'guide.sections.boatNoodle.title',
    images: [
      { src: '/images/boat-noodle.jpg' },
      { src: '/images/boat-noodle-far.jpg' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4940!3d15.2185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sBoat%20Noodle%20Shop%20Phimai!5e0!3m2!1sen!2sth!4v1755585214034"
  },
  {
    id: 'market',
    titleKey: 'guide.sections.market.title',
    images: [
      { src: '/images/market-uncle.jpg' },
      { src: '/images/market-auntie.jpg' },
      { src: '/images/marktet-auntie2.jpg' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4945!3d15.2182!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sPhimai%20Morning%20Market!5e0!3m2!1sen!2sth!4v1755585214035"
  },
  {
    id: 'coffee',
    titleKey: 'guide.sections.coffee.title',
    images: [
      { src: '/images/coffee-cafe.jpg' },
    ] as ImageConfig[],
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1924.9440490989714!2d102.4948!3d15.2183!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311917a1629c1fbf%3A0x682188c4c7576e05!2sBest%20Coffee%20Cafe%20Phimai!5e0!3m2!1sen!2sth!4v1755585214036"
  }
];
---

<Layout lang={lang} customSEO={{
  title: t('guide.seo.title'),
  description: t('guide.seo.description'),
  keywords: t('guide.seo.keywords'),
  canonical: "https://phimaipondhouse.com/guide"
}}>
  <Header />
  
  <main class="guide-main">
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label={t('breadcrumbs.ariaLabel')}>
      <div class="container">
        <ol class="breadcrumb-list">
          <li class="breadcrumb-item">
            <a href="/" class="breadcrumb-link" data-i18n-key="breadcrumbs.home">{t('breadcrumbs.home')}</a>
          </li>
          <li class="breadcrumb-item" aria-current="page">
            <span class="breadcrumb-current" data-i18n-key="breadcrumbs.guide">{t('breadcrumbs.guide')}</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Guide Title -->
    <section class="guide-title-section">
      <div class="container">
        <h1 class="guide-title" data-i18n-key="guide.title">{t('guide.title')}</h1>
      </div>
    </section>

    <!-- Guide Sections -->
    <section class="guide-sections">
      <div class="container guide-sections-grid">
        {guideSections.map((section, index) => (
          <GuideSection 
            title={t(section.titleKey)}
            titleKey={section.titleKey}
            images={section.images}
            mapSrc={section.mapUrl}
            carouselId={`${section.id}-carousel`}
            lightboxId={`${section.id}-lightbox`}
            sectionNumber={index + 1}
          />
        ))}
      </div>
    </section>


  </main>

     <Footer />
   <Animations />
 </Layout>

 <style>
   /* Guide Main */
   .guide-main {
     display: flex;
     flex-direction: column;
     gap: var(--space-xl);
     padding: var(--space-2xl) 0;
     background: var(--color-white);
   }

   /* Breadcrumbs */
   .breadcrumbs {
     padding: var(--space-md) 0;
     /* Removed background and border */
     margin-top: var(--header-height, 80px);
   }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
  }

  .breadcrumb-item:not(:last-child)::after {
    content: '';
    margin-left: var(--space-sm);
    width: 16px;
    height: 16px;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='%238B7355' stroke-width='2'%3e%3cpolyline points='9,18 15,12 9,6'%3e%3c/polyline%3e%3c/svg%3e");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.6;
  }

  .breadcrumb-link {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: var(--transition);
  }

  .breadcrumb-link:hover {
    color: var(--color-text);
    text-decoration: underline;
  }

  .breadcrumb-current {
    color: var(--color-text);
    font-size: 0.9rem;
    font-weight: 600;
  }

  /* Guide Title Section */
  .guide-title-section {
    padding: var(--space-md) 0;
    /* Removed background */
  }

  .guide-title {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    text-align: left;
    margin: 0;
    line-height: var(--lh-heading);
  }



  /* Guide Sections */
  .guide-sections {
    /* Removed background to match breadcrumbs and title */
    position: relative;
  }

  .guide-sections-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }





  /* Getting Around Section */
  .getting-around {
    padding: var(--space-4xl) 0;
    background: var(--gradient-cool);
  }

  .getting-around-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .getting-around-text h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--lh-heading);
  }

  

  .distances-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
  }

  .distance-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-white);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
  }

  .distance-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .distance-item svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .distance-item h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 var(--space-xs) 0;
  }

  .distance-item span {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  .getting-around-map {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .map-iframe {
    width: 100%;
    height: 400px;
    border: none;
  }

  /* Best Time Section */
  .best-time {
    padding: var(--space-4xl) 0;
    background: var(--gradient-warm);
    text-align: center;
  }

  .best-time-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .best-time-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--gradient-primary);
    border-radius: 50%;
    margin-bottom: var(--space-xl);
    color: var(--color-white);
    box-shadow: var(--shadow-lg);
  }

  .best-time h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    line-height: var(--lh-heading);
  }

  .best-time p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0;
  }

  
</style>
